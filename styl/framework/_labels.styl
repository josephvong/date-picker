.date-picker
	+prefix-classes('dp-')  // 给类名添加 自定义的固定前缀 “dp-”
		.labels
			border-top: 1px solid silver
			background-color:gray-background
			padding-left 0
			margin 0
			display flex

			li
				color rgb(148,148,148)
				list-style none
				flex 1
				text-align center
				font-size 0.8rem
				line-height labels-height

				&.sunday,
				&.saturday
					color:red

