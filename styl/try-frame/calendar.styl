.date-picker
	+prefix-classes('dp-')
		.calendar
			width:100%
			ul
				padding:0
				margin:0
				display:flex
				flex-flow:row wrap

				li
					position: relative
					box-sizing:border-box
					list-style:none
					flex:1 1 14.285714%
					min-width:14.285714%
					max-width 14.285714%
					padding-top:100%
					text-align:center
					padding-top:14.285714%
					margin-bottom:10px
					&:nth-of-type(2)
						background:red
					for n in (0..6)
						//sunday = 1+7*n
						//saturday = 7+7*n

						&.empty-{n}
							flex n n 14.285714% * n
							min-width 14.285714% * n
							max-width 100%
							background:#f5f5f5
							counter-reset:date

							/*~:nth-child(7n-1)
								background:red*/

					&:not(:first-child):before
						display:inline-block
						position:absolute
						content:counter(date)
						counter-increment:date
						width:100%
						top:50%
						left:0
						height:20px
						margin-top:-10px
						text-align:center

					&.active
						border-radius:50%
						border:1px solid blue




